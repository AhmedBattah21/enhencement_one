<StackPane fx:id="stackpane" stylesheets="@../AppCss/teacherspanel.css" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reportgenthree.views.TeachersPanelController">
   <children>
      <ImageView fitHeight="520.0" fitWidth="800.0" opacity="0.25" pickOnBounds="true">
         <image>
            <Image url="@../AppCss/images/school.png" />
         </image>
      </ImageView>
      <BorderPane fx:id="parent" maxHeight="520.0" maxWidth="800.0" prefHeight="500.0" prefWidth="800.0" style="-fx-border-color: skyblue;">
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="691.0" spacing="5.0">
               <children>
                  <Label fx:id="lbl_schoolname" alignment="CENTER" prefHeight="146.0" prefWidth="734.0" text="School Name" wrapText="true">
                     <font>
                        <Font name="Bookman Old Style Italic" size="27.0" />
                     </font>
                  </Label>
                  <Label fx:id="lbl_boxnumber" alignment="CENTER" layoutX="145.0" layoutY="191.0" prefHeight="65.0" prefWidth="519.0" text="P.O.BOX 1919-80200">
                     <font>
                        <Font name="Bookman Old Style Italic" size="27.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" layoutX="145.0" layoutY="226.0" prefHeight="65.0" prefWidth="519.0" text="TEACHER'S INFORMATION PANEL">
                     <font>
                        <Font name="Bookman Old Style Italic" size="27.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER" prefHeight="61.0" prefWidth="600.0" spacing="5.0" style="-fx-background-color: skyblue;" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="btn_addteacher" prefHeight="46.0" prefWidth="150.0" text="Add New Teacher">
                     <graphic>
                        <FontAwesomeIconView glyphName="USER_PLUS" size="25.0" />
                     </graphic></JFXButton>
                  <JFXButton fx:id="btn_availableteachers" layoutX="10.0" layoutY="18.0" prefHeight="46.0" prefWidth="150.0" text="Available Teachers">
                     <graphic>
                        <FontAwesomeIconView glyphName="USERS" size="25.0" />
                     </graphic></JFXButton>
                  <JFXButton fx:id="btn_assign" layoutX="10.0" layoutY="18.0" prefHeight="46.0" prefWidth="125.0" text="Assign Units">
                     <graphic>
                        <FontAwesomeIconView glyphName="PENCIL" size="25.0" />
                     </graphic></JFXButton>
                  <JFXButton fx:id="btn_edit" layoutX="165.0" layoutY="18.0" prefHeight="46.0" prefWidth="125.0" text="View">
                     <graphic>
                        <FontAwesomeIconView glyphName="LIST_UL" size="25.0" />
                     </graphic></JFXButton>
                  <JFXButton fx:id="btn_addtask" layoutX="562.0" layoutY="18.0" prefHeight="46.0" prefWidth="125.0" text="Tasks">
                     <graphic>
                        <FontAwesomeIconView glyphName="TAGS" size="25.0" />
                     </graphic>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</StackPane>

<StackPane fx:id="mypane" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reportgenthree.views.CreateMultipleEndStageController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="350.0" styleClass="mainFxmlClass" stylesheets="@../AppCss/createsingleexamreport.css">
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <top>
                  <HBox alignment="CENTER" prefHeight="58.0" prefWidth="400.0" spacing="10.0" style="-fx-background-color: seagreen;" BorderPane.alignment="CENTER">
                     <children>
                        <Label prefHeight="44.0" prefWidth="296.0" text="Multiple End Stage Report">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" prefHeight="58.0" prefWidth="39.0" HBox.hgrow="ALWAYS">
                           <children>
                              <JFXButton fx:id="btn_close" contentDisplay="GRAPHIC_ONLY" onAction="#close">
                                 <graphic>
                                    <FontAwesomeIconView glyphName="TIMES" size="30.0" />
                                 </graphic>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </top>
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
                     <children>
                        <VBox prefHeight="276.0" prefWidth="261.0" spacing="5.0">
                           <children>
                              <JFXComboBox fx:id="cmb_group" prefHeight="35.0" prefWidth="252.0" promptText="Select Group" />
                              <HBox alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="278.0">
                                 <children>
                                    <JFXComboBox fx:id="cmb_term" prefHeight="25.0" prefWidth="146.0" promptText="Select Term" />
                                    <JFXComboBox fx:id="cmb_year" editable="true" prefHeight="25.0" prefWidth="102.0" promptText="Year" />
                                 </children>
                              </HBox>
                              <HBox alignment="BOTTOM_LEFT" layoutX="15.0" layoutY="55.0" prefHeight="36.0" prefWidth="278.0">
                                 <children>
                                    <JFXComboBox fx:id="cmb_syear" editable="true" prefHeight="25.0" prefWidth="102.0" promptText="Year Of Study" />
                                 </children>
                              </HBox>
                              <Label prefHeight="48.0" prefWidth="263.0" text="Check the end stage exam" wrapText="true" />
                              <CheckListView fx:id="lst_examNames" prefHeight="56.0" prefWidth="278.0" />
                              <Label fx:id="lbl_error" prefHeight="31.0" prefWidth="249.0" text="Invalid Input" textFill="ORANGERED">
                                 <graphic>
                                    <FontAwesomeIconView fill="ORANGERED" glyphName="EXCLAMATION_TRIANGLE" />
                                 </graphic>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="224.0" prefWidth="261.0">
                           <children>
                              <HBox>
                                 <children>
                                    <Label prefHeight="48.0" prefWidth="263.0" text="Select Units To Include In The Report Form" wrapText="true" />
                                    <JFXCheckBox fx:id="check_all" onAction="#selectAll" onMouseClicked="#selectAll" prefHeight="40.0" prefWidth="77.0" text="All" />
                                 </children>
                              </HBox>
                              <CheckListView fx:id="lst_units" prefHeight="148.0" prefWidth="261.0" />
                              <Label fx:id="lbl_error1" prefHeight="31.0" prefWidth="249.0" text="Invalid Input" textFill="ORANGERED">
                                 <graphic>
                                    <FontAwesomeIconView fill="ORANGERED" glyphName="EXCLAMATION_TRIANGLE" />
                                 </graphic>
                              </Label>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" prefHeight="49.0" prefWidth="261.0" spacing="10.0">
                           <children>
                              <JFXButton fx:id="btn_create" onAction="#create" text="Create" />
                              <JFXButton fx:id="btn_cancel" layoutX="10.0" layoutY="10.0" text="Cancel" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </center>
               <left>
                  <VBox prefHeight="522.0" prefWidth="30.0" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <VBox prefHeight="392.0" prefWidth="30.0" BorderPane.alignment="CENTER" />
               </right>
               <bottom>
                  <HBox prefHeight="18.0" prefWidth="348.0" style="-fx-background-color: seagreen;" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
         </children>
      </AnchorPane>
   </children>
</StackPane>
